extends layout

block content

    .container
        .row
            section.col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-3
                h1 Please Login
                form(action="/notes.js")
                    .form-group
                        label(for='userName') User name
                        input#userName.form-control(type='text', placeholder='User Name', required, autofocus)
                    .form-group
                        label.control-label(for='password') Password
                        input#password.form-control(type='password', placeholder='Password', required)
                    .form-group
                        input.btn.btn-primary.btn-block(type='submit', value='Login')

